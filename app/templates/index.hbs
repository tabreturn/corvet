<img src="{{imgsrc}}" />

<br /><br />

{{#each tests as |test|}}
  <br />
  {{test.src}}
{{/each}}

<ol class="list-group">
  
  <li class="list-group-item">
    1. Recreate the above image.
  </li>
  
  <li class="list-group-item clearfix">
    2. Upload the result:
    <p></p>
    {{svg-upload action='assessFile'}}
  </li>
  
  <li class="list-group-item">
    3. Result:
    <div id="submission"></div>
  </li>
  
  <li class="list-group-item disabled">
    <button class="btn btn-primary btn-lg btn-block" disabled={{nextdisabled}} {{action 'postResult'}}>
      Next task
      <span class="glyphicon glyphicon-chevron-right"></span>
    </button>
  </li>
  
</ol>

